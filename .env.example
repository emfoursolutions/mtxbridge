# ABOUTME: Example environment configuration for MediaMTX control plane
# ABOUTME: Copy to .env and fill in actual values for your deployment

# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=change-this-to-a-random-secret-key

# Database
# PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/mtxman
# SQLite (development - easiest to get started):
DATABASE_URL=sqlite:///instance/mtxman.db

# LDAP/AD Configuration
LDAP_HOST=ldap://your-ad-server.example.com
LDAP_PORT=389
LDAP_USE_SSL=False
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN=ou=users,dc=example,dc=com
LDAP_GROUP_DN=ou=groups,dc=example,dc=com
LDAP_BIND_USER_DN=cn=service_account,dc=example,dc=com
LDAP_BIND_USER_PASSWORD=service_account_password
LDAP_USER_SEARCH_SCOPE=SUBTREE
LDAP_USER_OBJECT_FILTER=(objectClass=person)
LDAP_USER_RDN_ATTR=cn
LDAP_USER_LOGIN_ATTR=sAMAccountName

# MediaMTX Configuration
MEDIAMTX_WEBHOOK_SECRET=shared-secret-with-mediamtx
MEDIAMTX_BASE_URL=http://localhost:8554

# API Keys
API_KEY_LENGTH=32
API_KEY_PREFIX=mtx_

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mtxman.log
